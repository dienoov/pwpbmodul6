<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HalamanRumah">

    <Button
        android:id="@+id/buffon_latihan_1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/buffon_latihan_2"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#2e343b"
        android:text="Latihan setunggal" />

    <Button
        android:id="@+id/buffon_latihan_2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="#2e343b"
        android:text="Latihan second" />

    <Button
        android:id="@+id/buffon_mandiri"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buffon_latihan_2"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#2e343b"
        android:text="Jalur Mandiri" />

</RelativeLayout>